---
import RootLayout from "@/layouts/RootLayout.astro";
import Config from "@/config/config.json";
import { button } from "@/components/ui/Button.astro";
import { cn } from "@/lib/utils";
---

<RootLayout title="Home">
  <section class="hero-gradient">
    <div
      class="container grid lg:grid-cols-2 gap-16"
      aria-labelledby="hero-title"
    >
      <div>
        <h1
          id="hero-title"
          class="mb-8 font-semibold text-balance text-3xl md:text-5xl leading-tight"
        >
          {Config.hero.title}
        </h1>
        <p class="text-lg mb-10 text-pretty">
          {Config.hero.description}
        </p>
        <a
          class={cn(button({ variant: "default", size: "lg" }))}
          href={Config.hero.button.link}>{Config.hero.button.label}</a
        >
      </div>
      <div class="flex justify-center items-center">
        <img src="/images/hero-image.svg" alt="" width="400" height="400" />
      </div>
    </div>
  </section>
  <section class="container">
    <h2>TODO: New posts</h2>
  </section>
</RootLayout>
